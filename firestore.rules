rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is the owner
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // User Profiles Collection
    match /user_profiles/{userId} {
      // Users can read and write their own profile
      allow read, write: if isOwner(userId);
    }
    
    // Service Providers Collection
    match /service_providers/{providerId} {
      // Providers can read and write their own profile
      allow read, write: if isOwner(providerId);
      
      // Anyone can read active providers with location visible (for customer search)
      allow read: if resource.data.is_active == true && resource.data.show_location == true;
      
      // Allow list queries for authenticated users (customers need to search for providers)
      // Firestore will filter results to only return documents that pass the allow read rule above
      allow list: if isAuthenticated();
    }
    
    // Bookings Collection
    match /bookings/{bookingId} {
      // Allow read if user is the customer or provider
      // This validates individual document access
      allow read: if isAuthenticated() && (
        resource.data.user_id == request.auth.uid ||
        resource.data.provider_id == request.auth.uid
      );
      
      // Allow list queries for authenticated users
      // Firestore will filter results to only return documents that pass the allow read rule above
      // This allows queries where provider_id or user_id matches the authenticated user
      allow list: if isAuthenticated();
      
      // Users can create bookings
      allow create: if isAuthenticated() && 
        request.resource.data.user_id == request.auth.uid;
      
      // Providers can update bookings assigned to them
      allow update: if isAuthenticated() && 
        resource.data.provider_id == request.auth.uid;
      
      // Users can update their own bookings (for cancellation, etc.)
      allow update: if isAuthenticated() && 
        resource.data.user_id == request.auth.uid;
    }
  }
}

